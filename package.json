{
  "name": "bitcoin",
  "version": "1.0.0",
  "description": "A Vue.js and Firebase project to send Bitcoin SMS notifications",
  "author": "Cameron <me@skwai.com>",
  "private": true,
  "scripts": {
    "dev": "webpack-dev-server --inline --progress --config build/webpack.dev.conf.js",
    "start": "npm run dev",
    "build": "node build/build.js",
    "unit": "jest --coverage",
    "test": "npm run unit && npm run e2e",
    "deploy": "npm run build && firebase deploy",
    "lint": "eslint --ext .js,.vue src test/unit/specs test/e2e/specs, functions",
    "functions": "npm run config && firebase serve --only functions",
    "config": "firebase functions:config:get > functions/.runtimeconfig.json",
    "t": "npm run build $npm_package_version.js"
  },
  "dependencies": {
    "chartist": "^0.11.0",
    "firebase": "4.5.0",
    "libphonenumber-js": "^0.4.32",
    "vue": "^2.5.3",
    "vue-class-component": "^6.1.2",
    "vue-property-decorator": "^6.0.0",
    "vuex": "^3.0.1",
    "vuex-class": "^0.3.0",
    "whatwg-fetch": "^2.0.3"
  },
  "devDependencies": {
    "@firebase/app-types": "^0.1.1",
    "@types/chartist": "^0.9.38",
    "@types/firebase": "^3.2.1",
    "@types/jest": "^21.1.6",
    "@types/marked": "^0.3.0",
    "@types/node": "^9.4.0",
    "autoprefixer": "^7.1.2",
    "chalk": "^2.0.1",
    "chromedriver": "^2.27.2",
    "copy-webpack-plugin": "^4.0.1",
    "cross-spawn": "^5.0.1",
    "css-loader": "^0.28.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.1",
    "jest-serializer-vue": "^0.3.0",
    "jest-vue-preprocessor": "^1.3.1",
    "nightwatch": "^0.9.12",
    "node-notifier": "^5.1.2",
    "optimize-css-assets-webpack-plugin": "^3.2.0",
    "ora": "^1.2.0",
    "portfinder": "^1.0.13",
    "postcss-import": "^11.0.0",
    "postcss-loader": "^2.0.8",
    "postcss-url": "^7.2.1",
    "prettier": "^1.10.2",
    "request": "^2.34",
    "rimraf": "^2.6.0",
    "selenium-server": "^3.0.1",
    "semver": "^5.3.0",
    "shelljs": "^0.7.6",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "ts-jest": "^22.0.3",
    "ts-loader": "^3.4.0",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.6.0",
    "tslint-config-standard": "^7.0.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.5.3",
    "uglifyjs-webpack-plugin": "^1.1.1",
    "url-loader": "^0.5.8",
    "vue-jest": "^1.0.2",
    "vue-loader": "^13.3.0",
    "vue-style-loader": "^3.0.1",
    "vue-template-compiler": "^2.5.3",
    "vue-template-es2015-compiler": "1.6.x",
    "vue-test-utils": "^1.0.0-beta.11",
    "vue-ts-loader": "^0.0.3",
    "webpack": "^3.6.0",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.0"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "browserslist": ["> 1%", "last 2 versions", "not ie <= 8"],
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts?|jsx?|tsx?)$",
    "moduleFileExtensions": ["js", "json", "ts", "tsx", "vue"],
    "modulePaths": ["<rootDir>/src/"],
    "moduleDirectories": ["node_modules", "<rootDir>/src/"],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "snapshotSerializers": ["<rootDir>/node_modules/jest-serializer-vue"],
    "verbose": true,
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,vue,ts}",
      "!src/data/**",
      "!src/main.js",
      "!src/router/index.js",
      "!**/node_modules/**"
    ]
  }
}
